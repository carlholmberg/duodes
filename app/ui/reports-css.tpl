h2 {
	font-size: 12pt;
}

p {
	margin-top: 0;
}

table {
	margin-left: 20pt;
	margin-top: 20pt;
	page-break-inside: avoid;
}

table th {
	background: #ddd;
	font-size: 7pt;
	width: 60pt;
}

table th.wide {
	width: 300pt;
	text-align: left;
}

table tr.odd {
	background: #eee;
}

table td {
	font-size: 9pt;
	text-align: center;
}

table td.left {
	text-align: left;
}